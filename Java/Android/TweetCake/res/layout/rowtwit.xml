<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dip">
    <ImageView 
        android:id="@+id/imagetwit"
        android:contentDescription="avatar"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:paddingRight="5dip"/>
    <TextView 
        android:id="@+id/texttwit"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@id/imagetwit"
    	android:textColor="@color/black"
    	android:textSize="15dip"/>
    <TextView
        android:id="@+id/auteurtwit"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/texttwit"
    	android:layout_alignParentBottom="true"
    	android:layout_toRightOf="@id/imagetwit"
    	android:textColor="@color/black"
    	android:textSize="10dip"/>
    <TextView
        android:id="@+id/datetwit"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/texttwit"
    	android:layout_alignParentBottom="true"
    	android:layout_toRightOf="@id/auteurtwit"
    	android:textColor="@color/black"
    	android:paddingLeft="3dip"
    	android:textSize="10dip"/>
    <ImageView
        android:id="@+id/rttwit"
        android:paddingLeft="3dip"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/texttwit"
    	android:layout_toRightOf="@id/datetwit"
    	android:layout_alignBottom="@id/datetwit"
    	android:scaleType="center">
    	</ImageView>
</RelativeLayout>